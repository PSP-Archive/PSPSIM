TARGET = pspsim
PSPSDK = $(shell psp-config --pspsdk-path)
PSPBIN = $(shell psp-config --psp-prefix)/bin
SDL_CONFIG = $(PSPBIN)/sdl-config
OBJS =  \
Action.o \
ATA.o \
Atom.o \
CDisk.o \
CDrive.o \
Clock.o \
CPU.o \
CScreen.o \
CStream.o \
Debug.o \
Disassem.o \
Expr.o \
Font.o \
Frame.o \
GUI.o \
GUIDlg.o \
GUIIcons.o \
HardDisk.o \
IO.o \
Main.o \
Memory.o \
Mouse.o \
Options.o \
Parallel.o \
PNG.o \
Profile.o \
SDIDE.o \
Util.o \
YATBus.o \
SAASound.o \
unzip.o \
ioapi.o \
Display.o \
Floppy.o \
IDEDisk.o \
Input.o \
MIDI.o \
Sound.o \
OSD.o \
UI.o \
Video.o \
simcoupec.o \
psp_fmgr.o \
psp_main.o \
psp_kbd.o  \
psp_danzeff.o \
