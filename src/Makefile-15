SAASndC.o \
LibSAASound.o


DEFAULT_CFLAGS = $(shell $(SDL_CONFIG) --cflags)

PSP_FW_VERSION=15
PSPSIM_VERSION=1.2.1
MORE_CFLAGS = -O2 -DUSE_ZLIB -DUSE_LOWRES -DUSE_SAASOUND \
 -funroll-loops -ffast-math -fomit-frame-pointer \
 -fno-strength-reduce -finline-functions \
 -fsingle-precision-constant \
 -DUSE_PSP_IRKEYB \
 -DPSPSIM_VERSION=\"$(PSPSIM_VERSION)\" -DNO_STDIO_REDIRECT

#   -fsingle-precision-constant -finline-functions

CFLAGS = $(DEFAULT_CFLAGS) $(MORE_CFLAGS)
CXXFLAGS = $(DEFAULT_CFLAGS) $(MORE_CFLAGS) -fno-exceptions -fno-rtti

LIBS += -lpspirkeyb -lstdc++ -lpsppower -lSDL_image -lSDL -lpng -ljpeg -lpspaudio -lpspgu -lpsphprm -lz -lm

EXTRA_TARGETS = EBOOT.PBP
PSP_EBOOT_TITLE = PSPSIM-v$(PSPSIM_VERSION)
PSP_EBOOT_ICON= pspsim.png
PSP_EBOOT_PIC1= pspsim-pic.png

include $(PSPSDK)/lib/build.mak

all: EBOOT.PBP

all: SCEkxploit

install: all
	@mkdir -p /media/usbdisk/psp/game150/__SCE__pspsim/
	@mkdir -p /media/usbdisk/psp/game150/%__SCE__pspsim/
	cp __SCE__pspsim/EBOOT.PBP /media/usbdisk/psp/game150/__SCE__pspsim/
	cp %__SCE__pspsim/EBOOT.PBP /media/usbdisk/psp/game150/%__SCE__pspsim/

ctags:
	ctags *

